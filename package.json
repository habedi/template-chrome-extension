{
  "name": "template-chrome-extension",
  "version": "0.2.0",
  "description": "A template for creating a Google Chrome and Chromium extension.",
  "type": "module",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.{ts,html,css,json}\"",
    "test": "vitest run --coverage",
    "clean": "rimraf dist",
    "compile": "tsc -p tsconfig.json",
    "build": "npm run clean && npm run compile && node scripts/copy-static.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/habedi/template-chrome-extension.git"
  },
  "keywords": [
    "chrome",
    "extension",
    "template",
    "typescript",
    "javascript",
    "web-extension",
    "browser-extension"
  ],
  "author": "Hassan Abedi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/habedi/template-chrome-extension/issues"
  },
  "homepage": "https://github.com/habedi/template-chrome-extension#readme",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@vitest/coverage-v8": "^3.2.4",
    "chrome-types": "^0.1.380",
    "eslint": "^9.37.0",
    "globals": "^15.8.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "vitest": "^3.2.4"
  }
}
