# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,jsx,tsx}]
max_line_length = 100

[*.{html,css,scss}]
indent_size = 2
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max_line_length = 120

[*.{json,xml}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.sh]
indent_size = 2
